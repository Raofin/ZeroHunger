
@{
    ViewBag.Title = "ViewRequests";
}

<div>
    <h2>@Model.Name</h2>
    <h2>@Model.Location</h2>
    <h3>Requests</h3>

    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Description</th>
            <th>Expire Date</th>
            <th>Action</th>
        </tr>

        @foreach (var item in ViewBag.Requests)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Description</td>
                <td>@item.Expiry_Date</td>
                @if (item.Status != "Waiting") {
                    <td>@item.Status</td>
                } else {
                    <td><a class="btn btn-primary" href="/Employees/Order/@item.Id">Collect</a></td>
                }
            </tr>
        }
    </table>
    
    <div class="text-center">
        @foreach (var item in ViewBag.Restaurants)
        {
            <a href="/Restaurants/ViewRequests/@item.Id"  class="btn btn-primary">@item.Name</a>
        }
    </div>
    
</div>