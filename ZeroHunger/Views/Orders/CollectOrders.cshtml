@{
    ViewBag.Title = "CollectOrders";
}

<h2>CollectOrders</h2>

<div>
    @if (Model.Count == 0)
    {
        <h1>This employee currently has no orders to collect and distribute.</h1>
    }
    else
    {
        <h1>Orders for @Model[0].Employee.Name</h1>

        <table class="table table-bordered">
            <tr>
                <th>Request Id</th>
                <th>Restaurant Name</th>
                <th>Description</th>
                <th>Employee Name</th>
                <th>Action</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Request_Id</td>
                    <td>@item.Request.Restaurant.Name</td>
                    <td>@item.Request.Description</td>
                    <td>@item.Employee.Name</td>
                    <td><a href="/Orders/Collect/@item.Id">Collect</a></td>
                </tr>
            }
        </table>
    }
</div>